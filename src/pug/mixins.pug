mixin icon(id, className)
	svg(xmlns:xlink="http://www.w3.org/1999/xlink" class=className)
		use(xlink:href="#icon-" + id href="#icon-" + id)

mixin video(video, thumbnail, source="youtube")
	.video(data-video-id=video data-video-source=source)
		.video__preview-wrapper
			img.video__preview(src=thumbnail)
		.video__play-btn
			+icon('play-btn')

mixin modal(id, withCloseBtn=true)
	.modal(id=id)
		.modal__window
			if withCloseBtn
				button.modal__close-btn(type="button")
			block

mixin nav-btn
	.nav-btn
		.nav-btn__line
		.nav-btn__line
		.nav-btn__line

mixin stat-card(title, text)
	.stat-card
		.stat-card__title!=title 
		.stat-card__text!=text 

mixin titled-text-card(title, text)
	.titled-text-card
		.titled-text-card__title.title.title--mini!=title 
		.titled-text-card__text!=text

mixin learning-card(imgSrc, title)
	.learning-card
		.learning-card__img-wrapper 
			img.learning-card__img(src=imgSrc)
		.learning-card__title.title.title--mini!=title

mixin location-card(title, text)
	.location-card
		.location-card__title!=title 
		.location-card__text!=text

mixin icon-card(icon, text) 
	.icon-card
		.icon-card__icon-container 
			+icon(icon, 'icon-card__icon')
		.icon-card__text!=text

mixin program-card(title)
	.program-card
		.program-card__title!=title
		.program-card__text 
			block

mixin we-have-card(imgSrc, title)
	.we-have-card
		.we-have-card__img-wrapper 
			img.we-have-card__img(src=imgSrc)
		.we-have-card__title.title.title--mini!=title
		.we-have-card__text
			block